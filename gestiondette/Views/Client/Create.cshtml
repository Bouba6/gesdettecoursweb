@model gestiondette.Models.Client

@{
    Layout = "_layout";
}

<main class="p-4 sm:ml-64 overflow-hidden">
    <div class="flex flex-col justify-center items-center">
        <h1 class="text-3xl font-bold">Ajout Client</h1>
        <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none"
            stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
            class="lucide lucide-user">
            <path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2" />
            <circle cx="12" cy="7" r="4" />
        </svg>

        <div class="md:w-xgg sm:w-900 mx-auto p-6 border-t-black shadow-md border-2 rounded-md m-6">
            <form asp-action="Create" method="post">
                @* <div asp-validation-summary="All" class="text-danger"></div> *@

                <!-- Formulaire du Client -->
                <div class="mb-6 w-full">
                    <label asp-for="Surnom" class="block mb-2 text-sm font-medium text-gray-900">Surnom</label>
                    <input asp-for="Surnom"
                        class="form-control block w-full p-4 text-gray-900 border border-gray-300 rounded-lg bg-gray-50" />
                    <span asp-validation-for="Surnom" class="text-red-500"></span>
                </div>

                <div class="mb-6 w-full">
                    <label asp-for="Telephone" class="block mb-2 text-sm font-medium text-gray-900">Téléphone</label>
                    <input asp-for="Telephone"
                        class="form-control block w-full p-4 text-gray-900 border border-gray-300 rounded-lg bg-gray-50" />
                    <span asp-validation-for="Telephone" class="text-red-500"></span>
                </div>

                <div class="mb-6 w-full">
                    <label asp-for="Adresse" class="block mb-2 text-sm font-medium text-gray-900">Adresse</label>
                    <input asp-for="Adresse"
                        class="form-control block w-full p-4 text-gray-900 border border-gray-300 rounded-lg bg-gray-50" />
                    <span asp-validation-for="Adresse" class="text-red-500"></span>
                </div>


                <div class="mb-6">
                    <label for="CreateUser" class="switch">
                        <input id="CreateUser" type="checkbox" />
                        <span class="slider"></span>
                    </label>
                    <span class="ml-3 text">Créer un utilisateur</span>
                </div>


                <div id="UserForm" class="hidden">
                    <div class="mb-6 w-full">
                        <label for="User.UserName" class="block mb-2 text-sm font-medium text-gray-900">Nom
                            d'utilisateur</label>
                        <input asp-for="User.Email" id="UserEmail"
                            class="form-control block w-full p-4 text-gray-900 border border-gray-300 rounded-lg bg-gray-50" />
                        <span asp-validation-for="User.Email" class="text-red-500"></span>
                    </div>
                    <div class="mb-6 w-full">
                        <label for="User.UserName" class="block mb-2 text-sm font-medium text-gray-900">Nom
                            d'utilisateur</label>
                        <input asp-for="User.Login" id="UserLogin"
                            class="form-control block w-full p-4 text-gray-900 border border-gray-300 rounded-lg bg-gray-50" />
                        <span asp-validation-for="User.Login" class="text-danger"></span>
                    </div>

                    <div class="mb-6 w-full">
                        <label for="User.Password" class="block mb-2 text-sm font-medium text-gray-900">Mot de
                            passe</label>
                        <input asp-for="User.Password" type="password" id="UserPassword"
                            class="form-control block w-full p-4 text-gray-900 border border-gray-300 rounded-lg bg-gray-50" />
                        <span asp-validation-for="User.Password" class="text-danger"></span>
                    </div>

                </div>


                <div class="flex justify-end mt-4 space-x-2">
                    <input type="submit" value="Créer"
                        class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" />
                </div>
            </form>

            <div class="mt-4">
                <a asp-action="Index"
                    class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded">Retour à la
                    liste</a>
            </div>
        </div>
    </div>

</main>
